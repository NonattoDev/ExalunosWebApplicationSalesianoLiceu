<div class="container">
  <div class="content">
    <!-- END NAV -->


    <section class="tablewithborder hero is-info welcome is-small">
      <div class="hero-body">
        <div class="container">
          <h1 class="title">
            Olá, <%= user %> !
          </h1>
          <h2 class="subtitle">
            I hope you are having a great day!
          </h2>
        </div>
      </div>
    </section>
    <section class="info-tiles">
      <div class="tile is-ancestor has-text-centered">
        <div class="tile is-parent">
          <article class="tile is-child box">
            <p class="title"><%= count %> </p>
            <p class="subtitle">Ex Alunos Confirmados</p>
          </article>
        </div>
        <div class="tile is-parent">
          <article class="tile is-child box">
            <p class="title"><%= countAll %> </p>
            <p class="subtitle">Registros Feitos</p>
          </article>
        </div>
        <div class="tile is-parent">
          <article class="tile is-child box">
            <p class="title">3.4k</p>
            <p class="subtitle">Open Orders</p>
          </article>
        </div>
        <div class="tile is-parent">
          <article class="tile is-child box">
            <p class="title">19</p>
            <p class="subtitle">Exceptions</p>
          </article>
        </div>
      </div>
    </section>


    <div class="box">


      <table style="width: 100%" class="table-container is-bordered is-striped is-hoverable is-fullwidth" cellspacing="0" id="myTable">



        <div class="container">
          <thead>
            <th class="has-background-light">ID</th>
            <th class="has-background-light">Nome do Ex aluno</th>
            <th class="has-background-light">CPF</th>
            <th class="has-background-light">Nome do Convidado</th>
            <th class="has-background-light">Pago</th>
            <th class="has-background-light">Menu de Ações</th>
          </thead>
          <tbody>
            <% exAlunoData.forEach(data => { %>
            <tr>
              <td><%= data.id %> </td>
              <td><%= data.name %> </td>
              <td><%= data.cpf %> </td>
              <td><%= data['Guest.name'] %> </td>
              <td style="line-height: 50px;">
                <% if (data.isPaid === 0) { %>

                <i class="fas fa-times icon" style="color: #A90505;"></i>

                <% } else { %>

                <i class="fas fa-check icon" style="color: #00F8AE;"></i>
                <% } %>

              </td>
              <td>
                <form style="display:inline-table ;" action="/admin/dashboard/checkispaid/user/" method="post">
                  <input type="hidden" name="isPaidId" value="<%= data.isPaid %> ">
                  <input type="hidden" name="userID" value="<%= data.id %> ">
                  <button class=" btn"><i style="color: #00F8AE;" class="fas fa-check-circle "></i></button>
                </form>




                <a href="/admin/dashboard/edit/user/<%= data.id %>" class="btn"><i class="fas fa-user-edit" style="color: 0576C0;"></i></a>

                <form style="display:inline-table ;" action="/admin/dashboard/remove/user" method="post" id="removeUser">
                  <input type="hidden" name="idToDestroy" value="<%= data.id %>">
                  <button type="submit" class="btn"><i class="fas fa-trash-alt" style="color: #A90505 ;"></i>
                </form>
              </td>
            </tr>
            <% }) %>
          </tbody>
          <tfoot>
            <tr>
              <th class="has-background-light">ID</th>
              <th class="has-background-light">Nome do Ex Aluno</th>
              <th class="has-background-light">CPF</th>
              <th class="has-background-light">Nome do Convidado</th>
              <th class="has-background-light">Pago</th>
              <th class="has-background-light">Menu de Ações</th>
            </tr>
          </tfoot>
        </div>
      </table>
    </div>
  </div>
</div>



